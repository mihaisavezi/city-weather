{
  "name": "city-weather-deloitte",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "pnpm --filter @city-weather-deloitte/shared build && pnpm -r --parallel build",
    "dev": "pnpm --filter @city-weather-deloitte/backend db:seed && pnpm -r --parallel dev",
    "test": "pnpm -r test",
    "clean": "pnpm -r clean"
  },
  "devDependencies": {
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": "20.x",
    "pnpm": ">=8.0.0"
  }
}
